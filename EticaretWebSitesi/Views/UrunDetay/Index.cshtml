@using EticaretWebSitesi.Models.Siniflar
@model Urun

@{
    ViewData["Title"] = "Ürün Detay";
    Layout = "~/Views/Shared/_shopLayout.cshtml";
}

<style>
    body {
        position: relative;
        background-image: url('/img/libraryfoto.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center center;
    }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            z-index: -1;
        }

    .product-card {
        max-width: 1000px;
        background-color: rgba(30, 30, 30, 0.9);
        margin: 80px auto;
        border-radius: 15px;
        padding: 30px 40px;
        color: #eee;
        box-shadow: 0 12px 30px rgba(0,0,0,0.7);
        position: relative;
        z-index: 1;
    }

    .product-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
    }

    .left-column {
        flex: 1;
        min-width: 280px;
        text-align: center;
    }

    .right-column {
        flex: 2;
        min-width: 300px;
    }

    .product-image {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 8px 15px rgba(0,0,0,0.6);
    }

    h2.product-title {
        color: #f0a500;
        font-weight: 700;
        margin-bottom: 5px;
    }

    p.product-author {
        color: #ccc;
        font-style: italic;
        margin-bottom: 25px;
    }

    .price {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

        .price .old-price {
            text-decoration: line-through;
            color: #888;
            margin-right: 15px;
        }

        .price .discount-price {
            color: #e53935;
        }

    label {
        font-weight: 600;
        margin-bottom: 6px;
        display: inline-block;
    }

    input[type=number] {
        width: 80px;
        padding: 8px 10px;
        border-radius: 8px;
        border: none;
        margin-top: 4px;
    }

    button.btn-outline-danger {
        border: 2px solid #e53935;
        color: #e53935;
        background-color: transparent;
        font-weight: 700;
        padding: 12px 25px;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(229, 57, 53, 0.4);
    }

        button.btn-outline-danger:hover {
            background-color: #e53935;
            color: #fff;
            box-shadow: 0 8px 15px rgba(229, 57, 53, 0.7);
            transform: translateY(-3px);
        }

    button.btn-favorite {
        font-weight: 700;
        padding: 10px 22px;
        border-radius: 30px;
        border: 2px solid #ccc;
        background-color: transparent;
        color: #ccc;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 6px rgba(204,204,204,0.3);
        margin-top: 15px;
    }

        button.btn-favorite i {
            font-size: 18px;
            transition: color 0.3s ease;
        }

        button.btn-favorite:hover {
            color: #e53935;
            border-color: #e53935;
            box-shadow: 0 6px 15px rgba(229, 57, 53, 0.6);
            transform: translateY(-2px);
        }

        button.btn-favorite.favorited {
            background-color: #e53935;
            border-color: #e53935;
            color: white;
            box-shadow: 0 6px 15px rgba(229, 57, 53, 0.9);
        }

            button.btn-favorite.favorited i {
                color: white;
                text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
            }

            button.btn-favorite.favorited:hover {
                background-color: #b71c1c;
                border-color: #b71c1c;
                box-shadow: 0 8px 20px rgba(183, 28, 28, 0.9);
                transform: translateY(-2px);
            }

    .description {
        margin-top: 40px;
        border-top: 1px solid #555;
        padding-top: 20px;
        font-size: 1rem;
        color: #ddd;
        line-height: 1.6;
        white-space: pre-wrap;
    }
</style>

@if (TempData["GirisUyarisi"] != null)
{
    <div class="modal fade show" id="girisModal" tabindex="-1" aria-labelledby="girisModalLabel" style="display:block; background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="girisModalLabel">Uyarı</h5>
                    <button type="button" class="btn-close" onclick="kapatModal()" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    @TempData["GirisUyarisi"]
                </div>
            </div>
        </div>
    </div>

    <script>
        function kapatModal() {
            var modal = document.getElementById("girisModal");
            modal.style.display = "none";
        }

        window.onclick = function (event) {
            var modal = document.getElementById("girisModal");
            if (event.target === modal) {
                kapatModal();
            }
        }
    </script>
}

<section class="content">
    <div class="product-card">
        <div class="product-wrapper">
            <div class="left-column">
                <img src="@Model.UrunGorsel" alt="@Model.UrunAdi" class="product-image" />
            </div>
            <div class="right-column">
                <h2 class="product-title">@Model.UrunAdi</h2>
                <p class="product-author">@Model.UrunYazar | @Model.UrunMarka</p>

                @if (Model.IndirimliFiyat.HasValue && Model.IndirimliFiyat.Value > 0 && Model.IndirimliFiyat.Value < Model.UrunSatisFiyati)
                {
                    <div class="price">
                        <span class="old-price">@Model.UrunSatisFiyati ₺</span>
                        <span class="discount-price">@Model.IndirimliFiyat.Value ₺</span>
                    </div>
                }
                else
                {
                    <div class="price">
                        <span class="discount-price">@Model.UrunSatisFiyati ₺</span>
                    </div>
                }

                <form method="post" asp-controller="Urun" asp-action="SepeteEkle">
                    <input type="hidden" name="id" value="@Model.UrunId" />
                    <label for="adet">Adet:</label>
                    <input id="adet" type="number" name="adet" value="1" min="1" />
                    <br /><br />
                    <button type="submit" class="btn-favorite sepet-btn">
                        <i class="fas fa-shopping-cart"></i> Sepete Ekle
                    </button>
                </form>

                @{
                    var favoriler = Context.Session.GetObjectFromJson<List<int>>("favoriler") ?? new List<int>();
                    bool favorideMi = favoriler.Contains(Model.UrunId);
                }

                <form method="post" asp-controller="Shop" asp-action="FavoriEkleCikar">
                    <input type="hidden" name="id" value="@Model.UrunId" />
                    <button type="submit"
                            class="btn-favorite @(favorideMi ? "favorited" : "")"
                            title="@(favorideMi ? "Favorilerden çıkar" : "Favorilere ekle")">
                        <i class="fas fa-heart"></i>
                        @(favorideMi ? "Favoride" : "Favori Ekle")
                    </button>
                </form>
            </div>
        </div>

        <div class="description">
            <h5>Açıklama</h5>
            <p>@Model.Aciklama</p>
        </div>
    </div>
</section>
