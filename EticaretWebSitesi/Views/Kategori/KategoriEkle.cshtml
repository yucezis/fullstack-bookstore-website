@model EticaretWebSitesi.Models.Siniflar.Kategori
@{
    ViewData["Title"] = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h1 style="color: darkblue;">Yeni Kategori Ekleme</h1>
<br />
<form class="from-group" method="post">
    @Html.LabelFor(x=>x.KategoriAdi, "Kategori Adı")
    @Html.TextBoxFor(x=>x.KategoriAdi, new{ @class = "form-control"})
    <br />
    <button class="btn btn-info"> Kaydet</button>
</form>

