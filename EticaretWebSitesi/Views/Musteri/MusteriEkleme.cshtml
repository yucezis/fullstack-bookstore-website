@model EticaretWebSitesi.Models.Siniflar.Musteri
@{
    ViewData["Title"] = "MusteriEkleme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h1 style="color:darkgoldenrod">YENİ MÜŞTERİ EKLEME</h1>
<br />

<form class="from-group" method="post">

    @Html.LabelFor(x => x.MusteriAdi, "Müşterinin Adı")
    @Html.TextBoxFor(x => x.MusteriAdi, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriAdi, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.MusteriSoyadi, "Müşterinin Soyadı")
    @Html.TextBoxFor(x => x.MusteriSoyadi, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriSoyadi, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.MusteriSehir, "Müşterinin Adresi")
    @Html.TextBoxFor(x => x.MusteriSehir, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriSehir, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.MusteriMail, "Müşterinin Mail Adresi")
    @Html.TextBoxFor(x => x.MusteriMail, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriMail, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.MusteriTelNo, "Müşterinin Telefon Numarası")
    @Html.TextBoxFor(x => x.MusteriTelNo, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriTelNo, "", new { @style = "color:red" })
    <br />
    @Html.LabelFor(x => x.MusteriSifre, "Müşterinin Şifresi")
    @Html.TextBoxFor(x => x.MusteriSifre, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MusteriSifre, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-success"> Kaydet</button>
</form>















